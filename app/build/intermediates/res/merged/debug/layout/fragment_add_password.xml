<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.giorgio.gas.consuming.analyzer.thumbright.MainMActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#FFFFFF"
	    android:baselineAligned="false"
	    android:orientation="vertical" >
	
	    <LinearLayout 
	        android:id="@+id/account_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:baselineAligned="false"
	        android:orientation="horizontal" >
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="11"
	            android:gravity="center"
	            android:background="@drawable/gca_text_view_label"
	            android:orientation="vertical" >
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:textColor="@color/gca_yellow_default"
			        android:textSize="30sp"
			        android:text="@string/label_account" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/account_field_value"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="20"
	            android:layout_marginStart="2dp"
	            android:layout_marginLeft="2dp"
	            android:background="@drawable/gca_text_view_value"
	            android:orientation="vertical">
	            
	            <EditText
		            android:id="@+id/accountET"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|center_horizontal"
			        android:singleLine="true"
			        android:hint="@string/hint_account" />
	            
	            <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        android:textAllCaps="true"
			        android:textSize="12sp"
			        android:text="@string/help_account" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/account_site_field"
	        android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:baselineAligned="false"
	        android:orientation="horizontal" >
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="11"
	            android:gravity="center"
	            android:background="@drawable/gca_text_view_label"
	            android:orientation="vertical" >
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:textColor="@color/gca_yellow_default"
			        android:textSize="30sp"
			        android:text="@string/label_account_site" />
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/account_site_field_value"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="20"
	            android:layout_marginStart="2dp"
	            android:layout_marginLeft="2dp"
	            android:background="@drawable/gca_text_view_value"
	            android:orientation="vertical">
	            
	            <EditText
		            android:id="@+id/accountSiteET"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|center_horizontal"
			        android:singleLine="true"
			        android:hint="@string/hint_account_site" />
	            
	            <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        android:textAllCaps="true"
			        android:textSize="12sp"
			        android:text="@string/help_account_site" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/account_login_field"
	        android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:baselineAligned="false"
	        android:orientation="horizontal" >
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="11"
	            android:gravity="center"
	            android:background="@drawable/gca_text_view_label"
	            android:orientation="vertical" >
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:textColor="@color/gca_yellow_default"
			        android:textSize="30sp"
			        android:text="@string/label_account_login" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/account_login_field_value"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="20"
	            android:layout_marginStart="2dp"
	            android:layout_marginLeft="2dp"
	            android:background="@drawable/gca_text_view_value"
	            android:orientation="vertical">
	            
	            <EditText
		            android:id="@+id/accountLoginET"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|center_horizontal"
			        android:singleLine="true"
			        android:hint="@string/hint_account_login" />
	            
	            <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        android:textAllCaps="true"
			        android:textSize="12sp"
			        android:text="@string/help_account_login" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/account_password_field"
	        android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:baselineAligned="false"
	        android:orientation="horizontal" >
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="11"
	            android:gravity="center"
	            android:background="@drawable/gca_text_view_label"
	            android:orientation="vertical" >
	            
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:textColor="@color/gca_yellow_default"
			        android:textSize="30sp"
			        android:text="@string/label_account_password" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/account_password_field_value"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="20"
	            android:layout_marginStart="2dp"
	            android:layout_marginLeft="2dp"
	            android:background="@drawable/gca_text_view_value"
	            android:orientation="vertical">
	            
	            <EditText
		            android:id="@+id/accountPasswordET"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical|center_horizontal"
			        android:singleLine="true"
			        android:inputType="textPassword" />
	            
	            <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center"
			        android:textAllCaps="true"
			        android:textSize="12sp"
			        android:text="@string/help_account_password" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <Button 
	        android:id="@+id/addAccountBT"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rn_button"
	        android:layout_gravity="bottom|center_horizontal"
	        android:layout_margin="10dp"
	        android:textColor="#FFFFFF"
	        android:text="@string/label_add_account_pass" />
	    
    </LinearLayout>
</ScrollView>